{
  "compilerOptions": {
    "lib": ["es5", "es6", "es2016", "es2017"],
    "target": "es2016",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@api/*": ["api/*"],
      "@core/*": ["core/*"],
      "@common/*": ["common/*"],
      "@test/*": ["../test/*"]
    }
  },
  "exclude": ["node_modules"]
}
