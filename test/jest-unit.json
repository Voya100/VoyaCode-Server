{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../src",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@api(.*)$": "<rootDir>/api$1",
    "^@core(.*)$": "<rootDir>/core$1",
    "^@common(.*)$": "<rootDir>/common$1",
    "^@test(.*)$": "<rootDir>/../test$1"
  },
  "coverageDirectory": "../coverage",
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    ".entity.ts",
    ".dtos.ts",
    ".dto.ts"
  ]
}
