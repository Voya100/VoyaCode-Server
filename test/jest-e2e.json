{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@api(.*)$": "<rootDir>/../src/api$1",
    "^@core(.*)$": "<rootDir>/../src/core$1",
    "^@common(.*)$": "<rootDir>/../src/common$1",
    "^@test(.*)$": "<rootDir>$1"
  },
  "coverageDirectory": "../coverage",
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    ".entity.ts",
    ".dtos.ts",
    ".dto.ts"
  ]
}
